.Image
	position: relative
	margin-bottom 3rem
	h2
		position absolute
		background-color alpha(gatelin, .7)
		right 0
		// font-size: 2rem
		font-size: 3rem
		color white
		// font-family: 'Courgette', cursive
		// font-family: arial
		// text-transform: uppercase
		// z-index: 20
	&-map
		position absolute
		background-color alpha(black, .7)
		height: 100%
		span
			display: block
			font-size: 3rem
			margin-bottom 3rem
			margin-top 3rem
			color white
			font-weight: 700
		strong
			font-family: Lato
	figure
		width: 100vw
		margin: 0
	img
		width: 100vw
	
	&-background
		position: absolute
		height: 100%
		width: 100vw
		top 0
		right: 0
		left 0
		background-color alpha(black, .3)
		z-index: 20