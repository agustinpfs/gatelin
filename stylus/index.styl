.Index	
	display: flex
	justify-content: space-between
	flex-wrap: wrap
	&-article
		width: 50vw
		height 50vw
		overflow: hidden
		position: relative
		cursor: pointer
	img 
		width: 50vw
	&-title
		position: absolute
		width: 100%
		bottom 0
		padding 1rem
		background-color  alpha(black, 0.7)
		// font-family: arial
		overflow: hidden
		height 25px
		z-index: 2
		color white
	&-excerpt
		// width:  100%
		background-color alpha(black, 0.8)
		color white
		display none
		font-size: 1.2rem
		font-family: Lato
		height: 100%
		// padding-left auto
		// padding-right auto
		// right: 0
		// left 0
		text-align: center
		padding-top 10vw
		position: absolute
		top 0
		overflow: hidden
		width 100%
		span
			color gatelin
			font-size: 2rem
		
		
		// height: 300px
		// overflow: hidden
		// position: relative
		// cursor: pointer
			



@media (min-width: 700px)
	.Index
		&-article
			width: 33.33vw
			height 33.33vw			
		img 
			width: 33.33vw
		&-title
			font-size: 1.2rem
		&-excerpt
			padding-top 10vw
			span
				font-size: 3rem
		