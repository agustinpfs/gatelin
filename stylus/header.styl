.Header
	background-color black
	color grey-clear
	padding-bottom 6px
	padding-left .5rem
	padding-right .5rem
	&-logo
		display flex
		align-items: center
		padding-top 8px
		h1
			margin-left .5rem
			padding-bottom 6px
		span
			align-self: flex-end 
	&-top
		display flex
		justify-content space-between
		align-items: center
	&-navResponse
		background-color black-clear
		position absolute
		right -100%
		top 73px
		transition .5s
		width 100%
		text-align center
		z-index: 5
	&-label2
		position absolute
		// padding-right .5rem
		// padding .5rem
		right 0
		bottom -2rem
		background-color black-clear
	&-list
		li 
			padding-top .5rem
			padding-bottom .5rem
			border-top 1px solid #2B2A2A
			border-bottom 1px solid black
		a
			font-size: 1.2rem 
			text-decoration: none
			color grey-clear
		a:hover
			border-bottom 1px solid gatelin
	&-menu
		.check	
			display none		
			&:checked~
				.Header-navResponse
					position absolute
					right 0%
				    transition .5s	
				    z-index 3
		&_desktop			
			display none
			.Header-list
				display flex
				
				    

@media (min-width: 700px)
	.Header
		&-navResponse
			display none
		&-menu_desktop
			// display block
			display flex
			li 
				border-top 1px solid transparent
				border-bottom 1px solid transparent
				margin-left 1rem
			a 
				font-size: 1rem			
		&-label 
			display none















